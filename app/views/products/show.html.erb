
<article class="container">
  <div class="show"> 
    <p id="notice"><%= notice %></p>
    <div class="row" data-product-id="<%= @product.id %>">
    <div class="col-sm-9 col-md-9">
    <p>
      <%= image_tag(@product.image_url,class: "productimage img-zoom", data_zoom_image: @product.image_url) %>
    </p>
    </div>
    <div class="col-sm-3 col-md-3">
    <p>
      <strong>Name:</strong>
      <%= @product.name %>
    </p>
    <span><strong>Views:</strong><strong> <%= @product.views %></strong></span>
    <br>
    <p>
     <strong>Description:</strong>
      <%= @product.description %>
    </p>
    
    
    <p>
      <strong>Colour:</strong>
      <%= @product.colour %>
    </p>
    <p>
      <strong>Price:</strong>
      <%= @product.price %>
    </p>
    <p>Average Rating: <div id="average-rating" class="rated" data-score="<%= @product.average_rating %>"></div> </p>

    <%= form_with(url: '/payments/create') do |form| %>
     <%= render partial: "shared/stripe_checkout_button" %>
     <%= hidden_field_tag(:product_id, @product.id) %>
    <% end %>
    
    </div>
    </div>
    <hr>
    <%= render partial: "new_comment" %>
<div class="alert alert-info" style="display:none" role="alert">A new comment was posted!</div>
    <%= render partial: "comments" %>
    
    <br>
<% if current_user && current_user.admin? %>
    <%= link_to 'Edit', edit_product_path(@product) , class: "btn btn-default" %>
<% end %>
    <%= link_to 'Back', products_path, class: "btn btn-default" %>
  </div>   
</article>